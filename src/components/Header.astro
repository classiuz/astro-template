---
import AstroIcon from '@/icons/AstroIcon.astro'
import GitHubIcon from '@/icons/GitHub.astro'
import Button from '@/ui/Button.astro'
---

<header class="mt-28 flex grow flex-col gap-y-4">
  <h1 class="flex flex-col text-7xl font-bold">
    <span>Astro</span>
    <span>ClaSSius</span>
    <span
      style={{ backgroundSize: '300%' }}
      class="animate-gradient bg-gradient-to-r from-purple-500 via-pink-500 to-orange-500 bg-clip-text text-transparent"
    >
      Template
    </span>
  </h1>
  <p class="text-center">
    Get started by editing{' '}
    <code class="rounded-md bg-neutral-800 px-2 py-0.5">pages/index.astro</code>
  </p>
  <div class="flex justify-center gap-x-2">
    <a
      href="https://github.com/classiuz/astro-template"
      target="_blank"
      rel="noopener noreferrer"
      class="flex w-fit items-center gap-1 rounded-md bg-purple-400 px-6 py-2 text-neutral-950 transition-filter hover:brightness-110"
    >
      <GitHubIcon class="w-4" />
      <span>GitHub</span>
    </a>
    <a
      href="https://astro.build"
      target="_blank"
      rel="noopener noreferrer"
      class="flex w-fit items-center gap-1 rounded-md bg-orange-400 px-6 py-2 text-neutral-950 transition-filter hover:brightness-110"
    >
      <AstroIcon class="w-4" />
      <span>Astro</span>
    </a>
  </div>
  <div class="mx-auto">
    <Button id="increase-counter" class="w-40">Count is 0</Button>
  </div>
</header>

<script>
  import { createConfetti } from '@/lib/utils'

  let count = 0
  const button = document.getElementById('increase-counter') as HTMLButtonElement

  button.addEventListener('click', () => {
    count++
    button.innerText = `Count is ${count}`

    if (count === 209) {
      createConfetti()
    }
  })
</script>
